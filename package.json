{
  "name": "email-template-builder",
  "version": "1.0.0",
  "description": "An e-mail html template builder to easier create html e-mails that looks nice in all e-mail clients.",
  "main": "app.js",
  "scripts": {
    "build:precompile": "handlebars -c handlebars/runtime ./lib/templates/*.handlebars -f ./lib/templates.js -k each",
    "watch": "npm-run-all --parallel watch:*",
    "watch:handlebars": "nodemon -w ./lib/templates -e handlebars -x \"npm-run-all build:*\" --legacy-watch",
    "watch:template": "node app.js ./input/exampleHandlebars.json ./input/exampleHandlebarsData.json ./input/exampleHandlebarsHelpers.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonpalmqvist/email-template-builder.git"
  },
  "keywords": [
    "email",
    "html-email",
    "node",
    "handlebars"
  ],
  "author": "Simon Palmqvist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonpalmqvist/email-template-builder/issues"
  },
  "homepage": "https://github.com/simonpalmqvist/email-template-builder#readme",
  "devDependencies": {
    "jscs": "^2.8.0",
    "jshint": "^2.9.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.5.0"
  },
  "dependencies": {
    "handlebars": "^4.0.5"
  }
}
