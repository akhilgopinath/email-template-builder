{
  "title": "My E-mail template",
  "width": 600,
  "settings": {
    "backgroundColor": "#CCC",
    "color": "#111"
  },

  "children": [

    {
      "type": "container",
      "settings": {
        "backgroundColor": "#02B1EB",
        "color": "#ffffff",
        "align": "center"
      },
      "children": [
        {
          "type": "preHeader",
          "value": "This part will be visible next to the subject in some e-mail clients"
        },
        {"type":"spacing", "spacing": 20},
        {
          "type": "image",
          "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/logo.png?raw=true",
          "alt": "One image",
          "width": 50
        },
        {"type":"spacing", "spacing": 20}
      ]
    },

    {
      "type": "container",
      "children": [
        {
          "type": "image",
          "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
          "alt": "One image"
        }
      ]
    },

    {
      "type": "container",
      "padding": 20,
      "settings": {
        "backgroundColor": "#eee",
        "color": "#111",
        "align": "center"
      },
      "children": [
        {
          "type": "text",
          "value": "Hi {{name}} {{lastName}}",
          "settings": {
            "fontSize": 35,
            "lineHeight": 40
          }
        },
        {"type": "spacing", "spacing": 20},
        {
          "type": "text",
          "value": "Lorem ipsum dolor sit amet, ||test-link|| adipiscing elit, sed do eiusmod tempor ||test2-link|| ut labore et dolore magna",
          "links": [
            {
              "identifier": "test-link",
              "href": "https://www.google.se",
              "value": "consectetur",
              "settings": {"color": "#02B1EB"}
            },
            {
              "identifier": "test2-link",
              "href": "https://www.github.com",
              "value": "incididunt",
              "settings": {"color": "#02B1EB"}
            }
          ]
        },
        {"type": "spacing", "spacing": 20},
        {
          "type": "button",
          "value": "Read more",
          "href": "https://github.com",
          "height": 50,
          "borderRadius": 4,
          "settings": {
            "backgroundColor": "#02B1EB",
            "color": "#ffffff",
            "fontSize": 18,
            "fontWeight": "bold"
          }
        }
      ]
    },
    {
      "type": "container",
      "padding": 20,
      "settings": {
        "backgroundColor": "#eee",
        "align": "center"
      },

      "children": [
        {
          "type": "separator",
          "size": 1,
          "style": "solid",
          "color": "#918e89"
        },
        {"type": "spacing", "spacing": 20},

        {
          "type": "table",
          "settings": {"align": "left", "lineHeight": 20},
          "children": [
            {
              "type": "row",
              "settings": {"fontWeight": "bold"},
              "children": [
                {
                  "type": "cell",
                  "value": "Post"
                },
                {
                  "type": "cell",
                  "settings": {"align": "right"},
                  "value": "Sum"
                }
              ]
            },
            {
              "type": "hbsEach",
              "identifier": "goods",
              "children": [
                {
                  "type": "row",
                  "children": [
                    {
                      "type": "cell",
                      "value": "{{post}}"
                    },
                    {
                      "type": "cell",
                      "settings": {"align": "right"},
                      "value": "{{sum}}"
                    }
                  ]
                }
              ]
            },
            {
              "type": "row",
              "children": [
                {
                  "type": "cell",
                  "colSpan": 2,
                  "settings": {"verticalAlign": "middle"},
                  "children": [
                    {"type": "spacing", "spacing": 5},
                    {"type": "separator", "size": 1, "style": "dashed", "color": "#666"},
                    {"type": "spacing", "spacing": 5}
                  ]
                }
              ]
            },
            {
              "type": "row",
              "settings": {"fontWeight": "bold"},
              "children": [
                {
                  "type": "cell",
                  "value": "Total"
                },
                {
                  "type": "cell",
                  "settings": {"align": "right"},
                  "value": "{{totsum}}"
                }
              ]
            }

          ]
        },
        {"type": "spacing", "spacing": 20}
      ]
    },

    {
      "type": "twoColumnContainer",
      "margin": 0,
      "padding": 20,
      "settings": {
        "backgroundColor": "#eee",
        "align": "center"
      },
      "leftColumn": {
        "type": "column",
        "children": [
          {
            "type": "image",
            "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
            "alt": "image"
          }
        ]
      },
      "rightColumn": {
        "type": "column",
        "children": [
          {
            "type": "image",
            "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
            "alt": "image"
          }
        ]
      }
    },

    {
      "type": "threeColumnContainer",
      "margin": 0,
      "padding": 20,
      "settings": {
        "backgroundColor": "#eee",
        "align": "left"
      },
      "leftColumn": {
        "type": "column",
        "children": [
          {
            "type": "image",
            "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
            "alt": "image"
          }
        ]
      },
      "middleColumn": {
        "type": "column",
        "children": [
          {
            "type": "image",
            "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
            "alt": "image"
          }
        ]
      },
      "rightColumn": {
        "type": "column",
        "children": [
          {
            "type": "image",
            "src": "https://github.com/simonpalmqvist/email-template-builder/blob/handlebars-implementation/example/image/imgblock.jpg?raw=true",
            "alt": "image"
          }
        ]
      }
    },

    {
      "type": "container",
      "settings": {
        "backgroundColor": "#333",
        "color": "#eee",
        "align": "center"

      },
      "children": [
        {"type": "spacing", "spacing": 40},
        {
          "type": "table",
          "settings": {
            "fontSize": 12
          },
          "children": [
            {
              "type": "row",
              "children": [
                {
                  "type": "cell",
                  "children": [
                    {
                      "type": "text",
                      "value": [
                        "Something something",
                        "Something more"
                      ]
                    }
                  ]
                },
                {
                  "type": "cell",
                  "children": [
                    {
                      "type": "text",
                      "value": [
                        "Something something",
                        "Something more"
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {"type": "spacing", "spacing": 40}
      ]
    },

    {
      "type": "container",
      "padding": 20,
      "settings": {
        "backgroundColor": "#ccc",
        "fontSize": 10,
        "lineHeight": 12,
        "color": "#555",
        "align": "center"
      },
      "children": [
        {
          "type": "text",
          "value": [
            "If you would like to unsubscribe click ||mailto-link||."
          ],
          "links": [
            {
              "identifier": "mailto-link",
              "href": "mailto:example@example.com",
              "value": "here",
              "settings": {"textDecoration": "underline"}
            }
          ]
        }
      ]
    }
  ]
}